<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/ll_summary"
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:src="@drawable/labelnumber"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_label"
            android:layout_toRightOf="@id/iv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:textSize="28sp"
            android:text="50"/>

        <ImageView
            android:id="@+id/iv_max"
            android:layout_toRightOf="@id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/maxnote"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_max"
            android:layout_toRightOf="@id/iv_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:textSize="28sp"
            android:text="20"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_chart"
        android:layout_below="@id/ll_summary"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="200dp"/>

    <LinearLayout
        android:id="@+id/ll_bar_chart"
        android:layout_below="@id/ll_chart"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="200dp"/>

</RelativeLayout>
