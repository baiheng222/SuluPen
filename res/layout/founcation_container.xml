<?xml version="1.0" encoding="utf-8"?>
  <com.hanvon.inputmethod.pinyin.FounctionContainer
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/layout_moreFunction"
         android:layout_width="0dip"
         android:layout_height="0dip"
         android:inAnimation="@android:anim/fade_in"
         android:outAnimation="@android:anim/fade_out"
        >
    
    <RelativeLayout 
        android:id="@+id/background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cands_container_bg"
        >
       
       <ImageView 
      android:id="@+id/ibn_edianPen"
      android:layout_width="28dip"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="22dip"/> 
       <ImageView 
        android:id="@+id/ibn_skb_setting"
        android:layout_toRightOf="@+id/ibn_edianPen"
      android:layout_width="28dip"
      android:layout_height="match_parent"
       android:background="@drawable/skb_setting_selector"
		android:layout_marginLeft="33dip"
      />  
      <ImageView 
      android:id="@+id/ibn_voice_recongnition"
      android:layout_toRightOf="@+id/ibn_skb_setting"
      android:layout_width="28dip"
      android:layout_height="match_parent"
      android:background="@drawable/skb_softkey_selector"
		android:layout_marginLeft="33dip"/>
      <ImageView 
       android:id="@+id/ibn_misSkb"
       android:layout_width="28dp"
       android:layout_height="match_parent"
       android:layout_alignParentRight="true"
       android:layout_centerInParent="true"
        android:background="@drawable/skb_pulldown_selector"
        android:layout_marginRight="22dip"
       />

   </RelativeLayout>
       <View 
        android:id="@+id/foreground_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mask_bg"
        android:visibility="gone"
            />
   </com.hanvon.inputmethod.pinyin.FounctionContainer>
