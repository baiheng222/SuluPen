<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leftmenu_bkg"
    android:orientation="vertical" >

       <LinearLayout 
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <com.hanvon.sulupen.utils.CircleImageView  
        android:id="@+id/iv_login_icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/logicon" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" 
        android:layout_marginTop="5dp"
        android:orientation="vertical">
    <TextView 
        android:id="@+id/ivUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="未登录" 
        android:textColor="@color/white"
        android:textSize="15sp"/>
    <TextView 
        android:id="@+id/ivhvnUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="15sp"/>
    </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_login"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp" >

        <ImageView
            android:id="@+id/iv_count_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/count_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/iv_count_icon"
            android:gravity="center"
            android:text="@string/leftmenu_count" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_count"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator2"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/iv_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/setting_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/iv_setting_icon"
            android:gravity="center"
            android:text="@string/leftmenu_setting" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_setting"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_cloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator3"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/iv_cloud_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/cloud_sync_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/iv_cloud_icon"
            android:gravity="center"
            android:text="@string/leftmenu_cloud" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_cloud"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/separator4"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:gravity="bottom" >

        

        <TextView
            android:id="@+id/tv_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:text="Developer.hanvon.com.cn" />
        
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_above="@id/tv_comp"
            android:layout_marginLeft="15dp"
            android:text="Version:1.0.1" />
        
    </RelativeLayout>

</RelativeLayout>