    <CheckBox 
        android:id="@+id/cb_note_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:button="@drawable/custom_checkbox"
        
        />

</RelativeLayout>
